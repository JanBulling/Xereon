<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/gray_2"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="50dp"
        tools:text="Lebensmittel"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/font_normal"
        android:layout_centerVertical="true"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_mega_tiny"
        android:src="@drawable/ic_arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="@dimen/spacing_tiny"
        android:padding="@dimen/spacing_mega_tiny"
        tools:src="@drawable/ic_groceries"
        android:background="@drawable/bg_round_alpha"
        tools:backgroundTint="@color/type_green"
        android:layout_centerVertical="true"/>

</RelativeLayout>