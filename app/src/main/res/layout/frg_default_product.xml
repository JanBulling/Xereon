<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.xereon.xereon.data.model.Product" />
        <variable name="isLoading" type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:isVisible="@{isLoading}"
            android:indeterminateTint="@color/primary"/>

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:imageURL="@{product.productImageURL}"
            app:isVisible="@{!isLoading}"
            android:background="@color/gray_2"
            android:scaleType="centerCrop" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/primary"
            android:src="@drawable/ic_add_shopping_cart"
            android:tint="@color/white"
            app:isVisible="@{!isLoading}"
            app:borderWidth="0dp"
            app:layout_anchor="@id/product_scroll_child"
            app:layout_anchorGravity="end" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/product_scroll_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isVisible="@{!isLoading}"
            android:clipToPadding="false"
            android:paddingTop="210dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_scroll_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="48dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="@{product.name}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Kühlschrank mit integriertem Monitor und Magnetwand" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:lines="1"
                    app:price="@{product.price}"
                    app:unit="@{product.unit}"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    tools:text="16.05€ / 10 Stück" />

                <TextView
                    android:id="@+id/product_only_in_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/secondary"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="24dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="3dp"
                    android:text="Nur in der App"
                    app:isVisible="@{product.appoffer}"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_price"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/product_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="Beschreibung"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_only_in_app" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:maxLines="12"
                    android:minLines="2"
                    android:text="@{product.description}"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_description_title"
                    tools:text="-----" />

                <View
                    android:id="@+id/barrier"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/gray_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_description" />

                <NumberPicker
                    android:id="@+id/product_number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toStartOf="@id/product_unit"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier" />

                <TextView
                    android:id="@+id/product_unit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@{String.valueOf(product.unit)}"
                    app:layout_constraintBottom_toBottomOf="@id/product_number_picker"
                    app:layout_constraintEnd_toStartOf="@id/product_order_price"
                    app:layout_constraintStart_toEndOf="@id/product_number_picker"
                    app:layout_constraintTop_toTopOf="@id/product_number_picker"
                    tools:text="Stück" />

                <TextView
                    android:id="@+id/product_order_price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_number_picker"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_unit"
                    app:layout_constraintTop_toTopOf="@id/product_number_picker"
                    tools:text="16.05€" />

                <Button
                    android:id="@+id/product_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/button"
                    android:drawableEnd="@drawable/ic_add_shopping_cart"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="In den Einkaufswagen"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_number_picker"
                    app:layout_constraintWidth_max="330dp" />


                <RelativeLayout
                    android:id="@+id/product_store_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/product_add_to_cart">

                    <ImageView
                        android:id="@+id/product_store_img"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:foreground="#90000000"
                        android:scaleType="centerCrop"
                        app:imageURL="@{product.officeImageURL}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Weitere Produkte von"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/product_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:text="@{product.storeName}"
                        tools:text="Store name" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_products_same_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/product_store_info"
                    tools:itemCount="2"
                    tools:listitem="@layout/recycler_product_vertical" />

                <Button
                    android:id="@+id/product_more_store"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/button"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Mehr von diesem Unternehmen"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_products_same_store"
                    app:layout_constraintWidth_max="330dp" />

                <TextView
                    android:id="@+id/product_matching_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="Passende Alternativen"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_more_store" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_matching_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    app:layout_constraintTop_toBottomOf="@id/product_matching_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
