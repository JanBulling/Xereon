<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.xereon.xereon.data.model.Product" />

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="isSuccessful"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/store_not_found_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_undraw_waiting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Produkt nicht gefunden"
            android:textColor="@color/error"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_img"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}" />

        <TextView
            android:id="@+id/store_not_found_descr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto"
            android:text="Überprüfen Sie Ihre Verbindung und versuchen Sie es später erneut.\nDieses Produkt könnte auch vom Betreiber entfernt worden sein."
            android:textAlignment="center"
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_img"
            app:layout_constraintWidth_max="310dp"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}" />

        <Button
            android:id="@+id/store_not_found_retry"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Wiederholen"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_descr"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/primary"
            app:isVisible="@{isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            tools:visibility="gone"
            android:id="@+id/product_scroll_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show="@{!isLoading}"
            app:show2="@{isSuccessful}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product_scroll_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/gray_2"
                    android:scaleType="centerCrop"
                    app:imageURL="@{product.productImageURL}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/primary"
                    android:src="@drawable/ic_add_shopping_cart"
                    android:tint="@color/white"
                    app:borderWidth="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/product_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_img" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="48dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="@{product.name}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_img"
                    tools:text="Kühlschrank mit integriertem Monitor und Magnetwand" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    app:price="@{product.price}"
                    app:unit="@{product.unit}"
                    tools:text="16.05€ / 10 Stück" />

                <TextView
                    android:id="@+id/product_only_in_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/secondary"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="24dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="3dp"
                    android:text="Nur in der App"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="gone"
                    app:isVisible="@{product.appoffer}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_price"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/product_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="Beschreibung"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_only_in_app" />

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto"
                    android:maxLines="20"
                    android:minLines="2"
                    android:text="@{product.description}"
                    android:textColor="@color/text_gray"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_description_title"
                    tools:text="-----" />

                <View
                    android:id="@+id/barrier"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/gray_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_description" />

                <NumberPicker
                    android:id="@+id/product_number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toStartOf="@id/product_unit"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier" />

                <TextView
                    android:id="@+id/product_unit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="@{String.valueOf(product.unit)}"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_number_picker"
                    app:layout_constraintEnd_toStartOf="@id/product_order_price"
                    app:layout_constraintStart_toEndOf="@id/product_number_picker"
                    app:layout_constraintTop_toTopOf="@id/product_number_picker"
                    tools:text="Stück" />

                <TextView
                    android:id="@+id/product_order_price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/product_number_picker"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_unit"
                    app:layout_constraintTop_toTopOf="@id/product_number_picker"
                    tools:text="16.05€" />

                <Button
                    android:id="@+id/product_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/button"
                    android:drawableEnd="@drawable/ic_add_shopping_cart"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:text="In den Einkaufswagen"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_number_picker"
                    app:layout_constraintWidth_max="330dp" />


                <RelativeLayout
                    android:id="@+id/product_store_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/product_add_to_cart">

                    <ImageView
                        android:id="@+id/product_store_img"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:foreground="#90000000"
                        android:scaleType="centerCrop"
                        app:imageURL="@{product.officeImageURL}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Weitere Produkte von"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/product_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/roboto_bold"
                        android:maxLines="2"
                        android:text="@{product.storeName}"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        tools:text="Store name" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_products_same_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/product_store_info"
                    tools:itemCount="2"
                    tools:listitem="@layout/recycler_product_vertical" />

                <Button
                    android:id="@+id/product_more_store"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/button"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Mehr von diesem Unternehmen"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_products_same_store"
                    app:layout_constraintWidth_max="330dp" />

                <TextView
                    android:id="@+id/product_matching_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="3"
                    android:text="Passende Alternativen"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_more_store" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_matching_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    app:layout_constraintTop_toBottomOf="@id/product_matching_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
