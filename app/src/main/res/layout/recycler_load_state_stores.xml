<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="Boolean" />

        <variable
            name="isError"
            type="Boolean" />

        <variable
            name="isEmpty"
            type="Boolean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:indeterminateTint="@color/primary"
            android:visibility="visible"
            app:isVisible="@{isLoading}"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/text_view_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Konnte Filialen nicht abrufen"
            android:textColor="@color/error"
            android:textSize="16sp"
            android:visibility="gone"
            app:isVisible="@{isError}"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_error_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:text="Keine Verbinding mÃ¶glich..."
            android:textColor="@color/text_gray"
            android:textSize="14sp"
            android:visibility="gone"
            app:isVisible="@{isError}"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button"
            android:text="Wiederholen"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:isVisible="@{isError}"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/store_no_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_undraw_empty"
            android:visibility="gone"
            app:isVisible="@{isEmpty}"
            tools:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Keine Filialen gefunden"
            android:textColor="@color/error"
            android:textSize="16sp"
            android:visibility="gone"
            app:isVisible="@{isEmpty}"
            tools:visibility="gone" />
    </LinearLayout>

</layout>