<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/store_header_img"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/gray_2"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        app:layout_collapseParallaxMultiplier="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/store_type"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:lines="1"
        android:paddingStart="24dp"
        android:paddingEnd="120dp"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_header_img"
        tools:background="@color/black"
        tools:text="Elektronik" />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/store_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_type"
        tools:text="Elektroland Heilbronn GmBH &amp; Co. KG." />

    <RatingBar
        android:id="@+id/store_rating"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:numStars="5"
        android:rating="4.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_name" />

    <TextView
        android:id="@+id/store_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="4.5    (144)"
        android:textColor="@color/text_gray"
        app:layout_constraintStart_toEndOf="@id/store_rating"
        app:layout_constraintTop_toBottomOf="@id/store_name" />

    <ImageView
        android:id="@+id/store_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round"
        app:layout_constraintBottom_toTopOf="@id/store_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_type"
        tools:src="@drawable/img_map" />

    <TextView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_rating"
        tools:text="Lange Starße 8, 89542 Herbrechtingen" />

    <TextView
        android:id="@+id/store_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_address"
        tools:text="+49 171 894641" />

    <TextView
        android:id="@+id/store_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_globe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_phone_number"
        tools:text="metzgereiheussler.de" />

    <ImageView
        android:id="@+id/store_save_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/primary"
        android:padding="8dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toStartOf="@id/store_navigate"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_web"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/store_navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/primary"
        android:padding="8dp"
        android:src="@drawable/ic_navigation"
        app:layout_constraintEnd_toStartOf="@id/store_chat"
        app:layout_constraintStart_toEndOf="@id/store_save_favorite"
        app:layout_constraintTop_toBottomOf="@id/store_web"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/store_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/primary"
        android:padding="8dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/store_navigate"
        app:layout_constraintTop_toBottomOf="@id/store_web"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/store_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="3"
        android:text="Beschreibung"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_save_favorite" />

    <TextView
        android:id="@+id/store_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="8"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_description_title"
        tools:text="-----" />

    <TextView
        android:id="@+id/store_opening_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="3"
        android:text="Öffnungszeiten"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_description" />

    <include
        android:id="@+id/store_opening_hours"
        layout="@layout/incl_opening_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/store_opening_title" />

    <TextView
        android:id="@+id/store_peak_times_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="3"
        android:text="Stoßzeiten"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_opening_hours" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="AKTUELL"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_peak_times_title" />

    <TextView
        android:id="@+id/store_peak_times_visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="So viele Besucher wie gewöhnlich"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_peak_times_title" />

    <ImageView
        android:id="@+id/store_peak_times_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="@id/store_peak_chart"
        app:layout_constraintEnd_toStartOf="@id/store_peak_chart"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/store_peak_chart" />

    <com.xereon.xereon.view.barChart.BarChartView
        android:id="@+id/store_peak_chart"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        app:barColor="@color/primary"
        app:currentBarColor="#99E84C3D"
        app:layout_constraintEnd_toStartOf="@id/store_peak_times_next"
        app:layout_constraintStart_toEndOf="@id/store_peak_times_prev"
        app:layout_constraintTop_toBottomOf="@id/store_peak_times_visited"
        app:layout_constraintWidth_max="300dp" />

    <ImageView
        android:id="@+id/store_peak_times_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/store_peak_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/store_peak_chart"
        app:layout_constraintTop_toTopOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="6:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/store_peak_time_3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/store_peak_chart"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="9:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/store_peak_time_4"
        app:layout_constraintStart_toEndOf="@+id/store_peak_time_2"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="12:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/store_peak_time_5"
        app:layout_constraintStart_toEndOf="@+id/store_peak_time_3"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="15:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/store_peak_time_6"
        app:layout_constraintStart_toEndOf="@+id/store_peak_time_4"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="18:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/store_peak_time_7"
        app:layout_constraintStart_toEndOf="@+id/store_peak_time_5"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="21:00"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/store_peak_chart"
        app:layout_constraintStart_toEndOf="@+id/store_peak_time_6"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart" />

    <TextView
        android:id="@+id/store_peak_time_current_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_peak_chart"
        tools:text="Samstag" />

</androidx.constraintlayout.widget.ConstraintLayout>