<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.explore.ExploreFragment">

    <data>

        <import type="com.xereon.xereon.data.util.CategoryUtils" />

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="tableCategoryClickListener"
            type="com.xereon.xereon.ui.explore.OnTableItemSelect" />
    </data>

    <ScrollView
        android:id="@+id/explore_scroll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/explore_title_container"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#cf4a50"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/explore_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="XEREON ist bei\r\nJUGEND FORSCHT dabei!"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/explore_title_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/categories"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_container" />

            <TableLayout
                android:id="@+id/explore_category_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:stretchColumns="*"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_categories">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/explore_category_groceries"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_GROCERIES)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_groceries"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_groceries" />

                    <TextView
                        android:id="@+id/explore_category_cloth"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_CLOTH)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_cloth"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_cloth" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/explore_category_services"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_SERVICES)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_services"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_services" />

                    <TextView
                        android:id="@+id/explore_category_restaurant"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_RESTAURANT)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_restaurant"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_restaurant" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/explore_category_entertainment"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_ENTERTAINMENT)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_entertainment"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_entertainment" />

                    <TextView
                        android:id="@+id/explore_category_hotels"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_HOTEL)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_hotel"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_hotel" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/explore_category_electrical"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="3dp"
                        android:background="@color/gray_2"
                        android:fontFamily="@font/roboto_medium"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        android:onClick="@{()->tableCategoryClickListener.onTableSelect(CategoryUtils.Categories.CATEGORY_ELECTRONIC)}"
                        android:paddingHorizontal="8dp"
                        android:text="@string/category_electronics"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_electronics" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/explore_all_categories"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto"
                android:foreground="?selectableItemBackground"
                android:padding="3dp"
                android:text="@string/all_categories"
                android:textColor="@color/primary"
                android:textSize="13sp"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_category_table" />

            <TextView
                android:id="@+id/explore_title_recommendations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/recommendations"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_category_table" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto"
                android:text="@string/recommendations_description"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_recommendations" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/explore_recycler_recommendations"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="28dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                app:isVisible="@{!isLoading}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/explore_title_recommendations"
                tools:listitem="@layout/recycler_product_horizontal"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/explore_loading_recommendations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:indeterminateTint="@color/primary"
                app:isVisible="@{isLoading}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_recommendations" />

            <TextView
                android:id="@+id/explore_title_new_stores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="284dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_recommendations"
                tools:text="Neue Geschäfte in Herbrechtingen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto"
                android:text="@string/new_stores_description"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_new_stores" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/explore_recycler_new_stores"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="28dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                app:isVisible="@{!isLoading}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/explore_title_new_stores"
                tools:listitem="@layout/recycler_store_horizontal"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/explore_loading_new_stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:indeterminateTint="@color/primary"
                app:isVisible="@{isLoading}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_new_stores" />

            <TextView
                android:id="@+id/explore_title_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/popular"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_new_stores" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/explore_recycler_popular"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="14dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:isVisible="@{!isLoading}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/explore_title_popular"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/recycler_product_horizontal"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/explore_loading_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:indeterminateTint="@color/primary"
                app:isVisible="@{isLoading}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/explore_title_popular" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>