<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="isLoading" type="boolean" />
        <variable name="isSuccessful" type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.stores.DefaultStore">

        <ImageView
            android:id="@+id/store_not_found_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_undraw_blank_canvas"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/no_store_found_exception"
            android:textColor="@color/error"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_img"/>
        <TextView
            android:id="@+id/store_not_found_descr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}"
            android:textAlignment="center"
            android:text="@string/no_store_found_explanation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="310dp"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_img"/>

        <Button
            android:id="@+id/store_not_found_retry"
            android:layout_width="150dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            app:show="@{!isSuccessful}"
            app:show2="@{!isLoading}"
            android:text="@string/retry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_not_found_descr"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isVisible="@{isLoading}"
            android:indeterminateTint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show="@{!isLoading}"
            app:show2="@{isSuccessful}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>