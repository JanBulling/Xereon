<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isSorting"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.SearchFragment">

        <LinearLayout
            android:id="@+id/search_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_undraw_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Suche nach Filialen"
                android:textColor="@color/primary"
                android:textSize="19sp" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:text="Suchen Sie gezielt nach Filialen in Ihrer Umgebung"
                android:textAlignment="center"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/search_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/search_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Konnte Suche nicht durchfürhen"
                android:textColor="@color/error"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:text="Keine Verbinding möglich."
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button_retry"
                android:layout_width="150dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button"
                android:text="Wiederholen"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_no_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_undraw_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Keine Filialen gefunden"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:text="Es wurden keine Filielan mit den angegeben Parametern gefunden."
                android:textAlignment="center"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/search_sorting_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray_8"
            app:isVisible="@{isSorting}"
            tools:visibility="gone" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_filter"
            app:backgroundTint="@color/primary"
            app:isVisible="@{!isSorting}"
            app:tint="@color/white" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bottom_sheet_behaviour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/search_filter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Filter"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/search_chip_group_select_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:chipSpacingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/search_filter_title"
                app:singleSelection="true" />

            <TextView
                android:id="@+id/search_sorting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Ergebnisse Sortieren"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_chip_group_select_filter" />

            <RadioGroup
                android:id="@+id/search_sort_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="78dp"
                android:checkedButton="@id/search_sort_new_first"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_sorting_title">

                <RadioButton
                    android:id="@+id/search_sort_new_first"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Neue Filialen zuerst" />

                <RadioButton
                    android:id="@+id/search_sort_old_first"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Älteste Filialen zuerst" />

                <RadioButton
                    android:id="@+id/search_sort_A_Z"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="A -> Z" />

                <RadioButton
                    android:id="@+id/search_sort_Z_A"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Z -> A" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:elevation="10dp"
            android:visibility="gone"
            app:isVisible="@{isSorting}">

            <Button
                android:id="@+id/search_search_btn"
                android:layout_width="210dp"
                android:layout_height="54dp"
                android:layout_centerInParent="true"
                android:text="Filter anwenden"
                android:textAllCaps="false"
                app:icon="@drawable/ic_filter" />

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
