<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exploreFragment">

    <!-- LOGIN -->

    <!-- MAIN CONTENT -->
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.xereon.xereon.ui.explore.ExploreFragment"
        android:label="Entdecken"
        tools:layout="@layout/frg_explore">
        <action
            android:id="@+id/action_to_AllCategories"
            app:destination="@id/alLCategoriesFragment" />
        <action
            android:id="@+id/action_Explore_to_ChatOverview"
            app:destination="@id/chatOverViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.xereon.xereon.ui.search.SearchFragment"
        android:label="Suche"
        tools:layout="@layout/frg_search" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.xereon.xereon.ui.favorites.FavoritesFragment"
        android:label="Favoriten"
        tools:layout="@layout/frg_favorites" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.xereon.xereon.ui.map.MapFragment"
        android:label="Karte"
        tools:layout="@layout/frg_map" />

    <!-- STORE -->
    <fragment
        android:id="@+id/defaultStoreFragment"
        android:name="com.xereon.xereon.ui.store.DefaultStoreFragment"
        android:label="Default_Store"
        tools:layout="@layout/frg_default_store">
        <argument
            android:name="simpleStore"
            app:argType="com.xereon.xereon.data.store.SimpleStore"
            android:defaultValue="@null"
            app:nullable="true" />
        <argument
            android:name="simpleStoreId"
            android:defaultValue="-1"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="test.com/store/{simpleStoreId}" />
        <action
            android:id="@+id/action_Store_to_Favorites"
            app:destination="@id/favoritesFragment"
            app:popUpTo="@id/defaultStoreFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_to_Store"
        app:destination="@id/defaultStoreFragment" />

    <!-- PRODUCT -->
    <fragment
        android:id="@+id/defaultProductFragment"
        android:name="com.xereon.xereon.ui.product.DefaultProductFragment"
        android:label="Default_Produkt"
        tools:layout="@layout/frg_default_product">
        <argument
            android:name="simpleProduct"
            android:defaultValue="@null"
            app:argType="com.xereon.xereon.data.products.SimpleProduct"
            app:nullable="true" />
        <argument
            android:name="simpleProductId"
            android:defaultValue="-1"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink2"
            app:uri="test.com/product/{simpleProductId}" />
    </fragment>
    <action
        android:id="@+id/action_to_Product"
        app:destination="@id/defaultProductFragment" />

    <!-- CATEGORY -->
    <fragment
        android:id="@+id/alLCategoriesFragment"
        android:name="com.xereon.xereon.ui.categories.AllCategoriesFragment"
        android:label="Kategorien"
        tools:layout="@layout/frg_categories" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.xereon.xereon.ui.categories.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/frg_category">
        <argument
            android:name="category"
            app:argType="com.xereon.xereon.data.model.Category" />
        <action
            android:id="@+id/action_Category_to_SubCategory"
            app:destination="@id/subCategoryFragment" />
    </fragment>
    <action
        android:id="@+id/action_to_Category"
        app:destination="@id/categoryFragment" />
    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.xereon.xereon.ui.categories.SubCategoryFragment"
        android:label="SubCategoryFragment"
        tools:layout="@layout/frg_sub_category">
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>

    <!-- CART -->
    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="com.xereon.xereon.ui.shoppingCart.ShoppingCartFragment"
        android:label="Warenkorb"
        tools:layout="@layout/frg_shopping_cart">
        <action
            android:id="@+id/action_to_ShoppingCartProduct"
            app:destination="@id/shoppingCartProductsFragment" />
    </fragment>
    <action
        android:id="@+id/action_to_ShoppingCart"
        app:destination="@id/shoppingCartFragment"
        app:popUpTo="@id/shoppingCartFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/shoppingCartProductsFragment"
        android:name="com.xereon.xereon.ui.shoppingCart.ShoppingCartProductsFragment"
        android:label="Warenkorb"
        tools:layout="@layout/frg_shopping_cart_product">
        <argument
            android:name="storeId"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_ShoppingCart_to_Order"
            app:destination="@id/orderFragment" />
    </fragment>
    <dialog
        android:id="@+id/deleteAllOrdersDialogFragment"
        android:name="com.xereon.xereon.ui.shoppingCart.DeleteAllOrdersDialogFragment"
        android:label="DeleteAllOrdersDialogFragment">
        <argument
            android:name="storeId"
            android:defaultValue="-1"
            app:argType="integer" />
    </dialog>
    <action
        android:id="@+id/action_to_DeleteAllDialog"
        app:destination="@id/deleteAllOrdersDialogFragment" />

    <!-- ORDERING -->
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.xereon.xereon.ui.ordering.OrderFragment"
        android:label="Betsellen"
        tools:layout="@layout/frg_order" />

    <!-- CHAT -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.xereon.xereon.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/frg_chat">
        <argument
            android:name="storeId"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="storeName"
            android:defaultValue=" "
            app:argType="string" />
    </fragment>
    <action android:id="@+id/action_to_Chat" app:destination="@id/chatFragment" />
    <fragment
        android:id="@+id/chatOverViewFragment"
        android:name="com.xereon.xereon.ui.chat.ChatOverviewFragment"
        android:label="Alle Chats">
        <action
            android:id="@+id/action_ChatOverview_to_Chat"
            app:destination="@id/chatFragment" />
    </fragment>

</navigation>